generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model audit_logs {
  id         Int       @id @default(autoincrement())
  action     String    @db.VarChar(255)
  table_name String?   @db.VarChar(100)
  record_id  Int?
  user_id    String?   @db.VarChar(255)
  timestamp  DateTime? @default(now()) @db.Timestamp(6)
  details    String?
}

model discharged_patients {
  id                    Int       @id @default(autoincrement())
  patient_id            Int
  discharge_date        DateTime  @db.Date
  discharge_reason      String?
  discharge_notes       String?
  created_at            DateTime? @default(now()) @db.Timestamp(6)
  exit_reason           String?
  actual_discharge_date DateTime? @db.Date
  length_of_stay        Int?
  patients              patients  @relation(fields: [patient_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([patient_id], map: "idx_discharged_patients_patient")
}

model documents {
  id            Int       @id @default(autoincrement())
  patient_id    Int
  document_type String?   @db.VarChar(100)
  file_name     String?   @db.VarChar(255)
  file_path     String?
  uploaded_date DateTime? @db.Date
  created_at    DateTime? @default(now()) @db.Timestamp(6)
  mime_type     String?   @db.VarChar(100)
  notes         String?
  uploaded_at   DateTime? @default(now()) @db.Timestamp(6)
  patients      patients  @relation(fields: [patient_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model emergency_contacts {
  id           Int       @id @default(autoincrement())
  patient_id   Int
  contact_name String    @db.VarChar(255)
  relationship String?   @db.VarChar(100)
  phone_number String?   @db.VarChar(20)
  email        String?   @db.VarChar(255)
  created_at   DateTime? @default(now()) @db.Timestamp(6)
  patients     patients  @relation(fields: [patient_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model financial_records {
  id                Int        @id @default(autoincrement())
  patient_id        Int
  amount            Decimal    @db.Decimal(10, 2)
  type              String?    @db.VarChar(50)
  description       String?
  date              DateTime   @db.Date
  created_at        DateTime?  @default(now()) @db.Timestamp(6)
  updated_at        DateTime?  @default(now()) @db.Timestamp(6)
  weekly_fee        Decimal?   @db.Decimal(10, 2)
  weeks_paid        Int?       @default(0)
  weeks_in_debt     Int?       @default(0)
  current_week_paid Boolean?   @default(false)
  payment_status    String?    @default("Pendiente") @db.VarChar(50)
  patients          patients   @relation(fields: [patient_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  payments          payments[]

  @@index([patient_id], map: "idx_financial_records_patient")
}

model medical_notes {
  id                Int             @id @default(autoincrement())
  medical_record_id Int
  note_text         String
  created_by        String?         @db.VarChar(255)
  created_at        DateTime?       @default(now()) @db.Timestamp(6)
  medical_records   medical_records @relation(fields: [medical_record_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model medical_records {
  id            Int             @id @default(autoincrement())
  patient_id    Int
  visit_date    DateTime        @db.Date
  diagnosis     String?         @db.VarChar(255)
  treatment     String?         @db.VarChar(255)
  doctor_name   String?         @db.VarChar(255)
  notes         String?
  created_at    DateTime?       @default(now()) @db.Timestamp(6)
  updated_at    DateTime?       @default(now()) @db.Timestamp(6)
  medical_notes medical_notes[]
  patients      patients        @relation(fields: [patient_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([patient_id], map: "idx_medical_records_patient")
}

model patients {
  id                      Int                   @id @default(autoincrement())
  name                    String                @db.VarChar(255)
  email                   String?               @db.VarChar(255)
  phone                   String?               @db.VarChar(20)
  date_of_birth           DateTime?             @db.Date
  gender                  String?               @db.VarChar(50)
  address                 String?
  emergency_contact_name  String?               @db.VarChar(255)
  emergency_contact_phone String?               @db.VarChar(20)
  medical_history         String?
  allergies               String?
  current_medications     String?
  status                  String?               @default("Activo") @db.VarChar(50)
  created_at              DateTime?             @default(now()) @db.Timestamp(6)
  updated_at              DateTime?             @default(now()) @db.Timestamp(6)
  admission_date          DateTime?             @db.Date
  discharged_patients     discharged_patients[]
  documents               documents[]
  emergency_contacts      emergency_contacts[]
  financial_records       financial_records[]
  medical_records         medical_records[]
  payments                payments[]
  psychology_records      psychology_records[]

  @@index([admission_date], map: "idx_patients_admission_date")
  @@index([email], map: "idx_patients_email")
}

model payments {
  id                  Int                @id @default(autoincrement())
  financial_record_id Int?
  patient_id          Int
  amount              Decimal            @db.Decimal(10, 2)
  payment_date        DateTime           @db.Date
  payment_method      String?            @db.VarChar(50)
  status              String?            @default("completed") @db.VarChar(50)
  created_at          DateTime?          @default(now()) @db.Timestamp(6)
  updated_at          DateTime?          @default(now()) @db.Timestamp(6)
  financial_records   financial_records? @relation(fields: [financial_record_id], references: [id], onUpdate: NoAction)
  patients            patients           @relation(fields: [patient_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([patient_id], map: "idx_payments_patient")
}

model psychology_notes {
  id                   Int                @id @default(autoincrement())
  psychology_record_id Int
  note_text            String
  created_by           String?            @db.VarChar(255)
  created_at           DateTime?          @default(now()) @db.Timestamp(6)
  psychology_records   psychology_records @relation(fields: [psychology_record_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model psychology_records {
  id                Int                @id @default(autoincrement())
  patient_id        Int
  session_date      DateTime           @db.Date
  diagnosis         String?            @db.VarChar(255)
  treatment_plan    String?
  psychologist_name String?            @db.VarChar(255)
  notes             String?
  created_at        DateTime?          @default(now()) @db.Timestamp(6)
  updated_at        DateTime?          @default(now()) @db.Timestamp(6)
  psychology_notes  psychology_notes[]
  patients          patients           @relation(fields: [patient_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([patient_id], map: "idx_psychology_records_patient")
}
